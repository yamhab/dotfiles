#!/bin/sh
userresources=$HOME/.config/xorg/Xresources
usermodmap=$HOME/.config/xorg/Xmodmap
sysresources=/etc/X11/xinit/.Xresources
sysmodmap=/etc/X11/xinit/.Xmodmap

# Merge in defaults and keymaps
if [ -f $sysresources ]; then
	xrdb -merge $sysresources
fi

if [ -f $sysmodmap ]; then
	xmodmap $sysmodmap
fi

if [ -f "$userresources" ]; then
	xrdb -merge "$userresources"
fi

if [ -f "$usermodmap" ]; then
	xmodmap "$usermodmap"
fi

# Start some nice programs
if [ -d /etc/X11/xinit/xinitrc.d ] ; then
	for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
		[ -x "$f" ] && . "$f"
	done
	unset f
fi

# Autostart
[ "$(ps aux | grep redshift | wc -l)" -eq 1 ] && redshift &
[ -f /usr/lib/geoclue-2.0/demos/agent ] && /usr/lib/geoclue-2.0/demos/agent &
[ -f /usr/libexec/geoclue-2.0/demos/agent ] && /usr/libexec/geoclue-2.0/demos/agent &
dunst &
echo 10 | canvas -S 1920x1080 -B -n -a &
setxkbmap -layout us -variant colemak &
status &
xautolock -time 5 -locker i3lock-conf &
xbanish &
# For chromebook
# xmodmap -e "keycode 133 = BackSpace" &
# xset r 133 &
xset r 66 &
xset r rate 300 40 &
xsetroot -cursor_name left_ptr &

# Start window manager
exec dwm
