#!/usr/bin/env sh

# Xresources settings
xrdb -merge "$HOME/.config/xorg/Xresources"

# Scripts related to xinit
for f in /etc/X11/xinit/xinitrc.d/?*.sh; do
    [ -x "$f" ] && . "$f"
done

# Autostart
dunst &
echo 10 | canvas -S 1920x1080 -B -n -a &
picom &
redshift -PO 6000 &
setxkbmap -layout us -variant colemak &
xautolock -time 5 -locker i3lock-conf &
xbanish &
xset r 66 &
xset r rate 300 30 &
xsetroot -cursor_name left_ptr &

# Window manager
exec spectrwm
