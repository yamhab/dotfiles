# Settings
font pango:JetBrains Mono NL 8
for_window [class="^.*"] border pixel 3
gaps inner 11

# Colors
client.unfocused #44475a #44475a #f8f8f2 #ff5555 #44475a
client.focused_inactive  #44475a #f8f8f2 #44475a #ff5555 #44475a
client.focused #6272a4 #6272a4 #f8f8f2 #ff5555 #6272a4
client.urgent #ff5555 #ff5555 #282a36 #ff5555 #ff5555
client.placeholder #000000 #282a36 #f8f8f2 #000000 #44475a
client.background #282a36

# Custom keybinds
bindsym --release $m+apostrophe exec --no-startup-id slock
bindsym $m+p exec --no-startup-id flameshot gui
bindsym $m+XF86AudioRaiseVolume exec --no-startup-id pulsemixer --change-volume 5
bindsym $m+XF86AudioLowerVolume exec --no-startup-id pulsemixer --change-volume -5
bindsym $m+XF86AudioMute exec --no-startup-id pulsemixer --toggle-mute
bindsym $m+semicolon exec --no-startup-id rofi -monitor -4 -show drun
bindsym $m+Return exec --no-startup-id st
bindsym $m+comma exec --no-startup-id setxkbmap -layout us -variant colemak
bindsym $m+period exec --no-startup-id setxkbmap -layout us
bindsym $m+w move workspace to output left
bindsym $m+f move workspace to output right

# Defaultish keybinds
set $m Mod4
floating_modifier $m
bindsym $m+Shift+c kill
bindsym $m+h focus left
bindsym $m+j focus down
bindsym $m+k focus up
bindsym $m+l focus right
bindsym $m+Left focus left
bindsym $m+Down focus down
bindsym $m+Up focus up
bindsym $m+Right focus right
bindsym $m+Shift+h move left
bindsym $m+Shift+j move down
bindsym $m+Shift+k move up
bindsym $m+Shift+l move right
bindsym $m+Shift+Left move left
bindsym $m+Shift+Down move down
bindsym $m+Shift+Up move up
bindsym $m+Shift+Right move right
bindsym $m+y split h
bindsym $m+u split v
bindsym $m+space fullscreen toggle
bindsym $m+Shift+space floating toggle
bindsym $m+s layout toggle split
bindsym $m+t focus mode_toggle
bindsym $m+m focus parent
set $ws1 main
set $ws2 term
set $ws3 web
set $ws4 chat
bindsym $m+1 workspace $ws1
bindsym $m+2 workspace $ws2
bindsym $m+3 workspace $ws3
bindsym $m+4 workspace $ws4
bindsym $m+Shift+1 move container to workspace $ws1
bindsym $m+Shift+2 move container to workspace $ws2
bindsym $m+Shift+3 move container to workspace $ws3
bindsym $m+Shift+4 move container to workspace $ws4
bindsym $m+q reload
bindsym $m+Shift+q exit
bindsym $m+r mode "resize"
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $m+r mode "default"
}
